<%- if @guestintip %>
INTIP=<%= guestintip %>
<% end -%>
<%- if @guestextip %>
EXTIP=<%= guestextip %>
<% end -%> 
ARGS="-smp <%= guestcpus %> -m <%= guestmemory %> -enable-kvm -k de -cpu host"
<% if @guestdisks.size != 0 then -%>
DISKS=""
<% guestdisks.to_a.each do |disk| -%>
DISKS="$DISKS <%= disk %>"
<% end -%>
<% else -%>
<% if @guest_hda -%>
HDA="<%= guest_hda %>"
<% end -%>
<% if @guest_hdb -%>
HDB="<%= guest_hdb %>"
<% end -%>
<% if @guest_hdc -%>
HDC="<%= guest_hdc %>"
<% end -%>
<% if @guest_hdd -%>
HDD="<%= guest_hdd %>"
<% end -%>
<% end -%>  
<% if guestmacaddr then -%>
MACADDR="<%= guestmacaddr %>"
<% end -%> 
<% if guestdrbd then -%>
DRBD="<%= guestdrbd %>"
<% end -%>
<% if isoimage then -%>
ISOIMG="<%= isoimage %>"
<% end -%>
<% if vncid then -%>
VNCID="<%= vncid %>"
<% end -%>
<% if @guestnicmodel -%>
NICMODEL="<%= guestnicmodel %>"
<% end -%>
<% if @networkmode -%>
NETWORKMODE="<%= @networkmode %>"
<% end -%>
<% if @bridgename -%>
BRIDGENAME="<%= @bridgename %>"
<% end -%>
 

