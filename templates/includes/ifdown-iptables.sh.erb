# ------------------------------------------------
# adding firewall rules
# for the node
#

if [ "x$INTIP" != "x" ]; then
	/sbin/iptables -D FORWARD -s $INTIP/32 -j ACCEPT

	/sbin/iptables -D FORWARD -d $INTIP/32 -p tcp --dport 22 -j ACCEPT
	if [ "x$SSHPORT" != "x" ]; then
		/sbin/iptables -t nat -D PREROUTING -i <%= extif %> -p tcp --dport $SSHPORT -j DNAT --to-destination $INTIP:22
	fi

	/sbin/iptables -t nat -D KVMPOSTROUTING -s $INTIP/32 -d <%= localnet %> -j ACCEPT        
	/sbin/iptables -t nat -D KVMPOSTROUTING -s $INTIP/32 -o <%= extif %> -j SNAT --to $EXTIP
fi